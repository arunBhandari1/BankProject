<script>

function clearError()
{
	$("#message1").html("");
	document.getElementById("message1").innerHTML="";
}

function loanRequestValidation()
{
	var loanType= document.getElementById("loanType").value;
	if (loanType==="Select")
		{
			document.getElementById("message1").innerHTML="Select the loan Type";
			$("#loanType").focus();
			return;
		}
	
}

